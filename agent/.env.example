# atPlatform Configuration
# This is YOUR agent's @sign - get it from https://atsign.com
AT_SIGN=@your_agent
AT_KEYS_FILE_PATH=./keys/@your_agent_key.atKeys
AT_ROOT_SERVER=root.atsign.org

# Authorized Users (optional - comma-separated list of @signs allowed to use this agent)
# Leave empty to allow any @sign to communicate with your agent
# Example: ALLOWED_USERS=@alice,@bob
ALLOWED_USERS=

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Claude API Configuration (optional)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Agent Configuration
PRIVACY_THRESHOLD=0.7
MAX_CONTEXT_SIZE=4096
